<h1>Here are all the restaurants</h1>
<table border="1">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Category</th>
      <th>Details</th>
      <th>Delete ?</th>
    </tr>
  </thead>
 <% @restaurants.each do |restaurant| %>
    <tr>
      <td>
        <%= restaurant.name %>
      </td>
      <td><%= restaurant.address %></td>
      <td><%= restaurant.category %></td>
      <td><%=link_to "Show details", restaurant_path(restaurant) %></td>
      <td style="text-align: center">
      <%=link_to "Get rid of this shit", delete_restaurant_path(restaurant),
      method: :delete,
      data: { confirm: "Are you sure?" }%>
      </td>
    </tr>
  <% end %>
</table>

<div style="margin-top: 50px">
<%=link_to "Add a new restaurant", restaurants_new_path %>
</div>

